{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "App/*": ["App/*"],
      "lib/*": ["lib/*"],
      "components/*": ["components/*"],
      "scss/*": ["scss/*"],
      "shared/*": ["shared/*"],
      "stores/*": ["stores/*"]
    },
    "outDir": "./public",
    "noEmit": true,
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
